<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectColour"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/editRed"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/barR"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="@string/_20"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/redBar"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editBlue"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/barB"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="@string/_20"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/blueBar"
        app:layout_constraintTop_toBottomOf="@+id/editGreen" />

    <EditText
        android:id="@+id/editGreen"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/barG"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="@string/_20"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/greenBar"
        app:layout_constraintTop_toBottomOf="@+id/editRed" />

    <Button
        android:id="@+id/submitButton2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="41dp"
        android:onClick="onClickSubmit"
        android:text="@string/apply_changes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grey" />

    <Button
        android:id="@+id/red"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorRed"
        android:onClick="onClickColour"
        app:layout_constraintBottom_toTopOf="@+id/orange"
        app:layout_constraintEnd_toStartOf="@+id/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/blue"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorBlue"
        android:onClick="onClickColour"
        app:layout_constraintBottom_toTopOf="@+id/grey"
        app:layout_constraintEnd_toStartOf="@+id/green"
        app:layout_constraintStart_toEndOf="@+id/purple"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/green"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorGreen"
        android:onClick="onClickColour"
        app:layout_constraintBottom_toTopOf="@+id/black"
        app:layout_constraintEnd_toStartOf="@+id/yellow"
        app:layout_constraintStart_toEndOf="@+id/blue"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/purple"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPurple"
        android:onClick="onClickColour"
        app:layout_constraintBottom_toTopOf="@+id/orange"
        app:layout_constraintEnd_toStartOf="@+id/blue"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/black"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="84dp"
        android:background="@color/colorBlack"
        android:onClick="onClickColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green" />

    <Button
        android:id="@+id/grey"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorGrey"
        android:onClick="onClickColour"
        app:layout_constraintEnd_toStartOf="@+id/black"
        app:layout_constraintTop_toBottomOf="@+id/blue" />

    <Button
        android:id="@+id/yellow"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorYellow"
        android:onClick="onClickColour"
        app:layout_constraintBottom_toTopOf="@+id/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/orange"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorOrange"
        android:onClick="onClickColour"
        app:layout_constraintEnd_toStartOf="@+id/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red" />

    <Button
        android:id="@+id/white"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="39dp"
        android:background="@color/colorWhite"
        android:onClick="onClickColour"
        app:layout_constraintBottom_toTopOf="@+id/submitButton2"
        app:layout_constraintEnd_toStartOf="@+id/grey"
        app:layout_constraintTop_toBottomOf="@+id/blue"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/greenBar"
        android:layout_width="248dp"
        android:layout_height="23dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="24dp"
        android:progressBackgroundTint="@color/barG"
        android:progressTint="@color/barG"
        android:thumbTint="@color/barG"
        android:max="255"
        app:layout_constraintBottom_toTopOf="@+id/blueBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/redBar"
        android:layout_width="248dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="24dp"
        android:progressBackgroundTint="@color/barR"
        android:progressTint="@color/barR"
        android:thumbTint="@color/barR"
        android:max="255"
        app:layout_constraintBottom_toTopOf="@+id/greenBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/blueBar"
        android:layout_width="248dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="28dp"
        android:progressBackgroundTint="@color/barB"
        android:progressTint="@color/barB"
        android:thumbTint="@color/barB"
        android:max="255"
        app:layout_constraintBottom_toTopOf="@+id/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/colorPreview"
        android:layout_width="232dp"
        android:layout_height="138dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/editRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/black" />

</android.support.constraint.ConstraintLayout>